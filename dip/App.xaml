<Application x:Class="dip.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dip"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Button}">
            <!-- Цвет текста кнопки -->
            <Setter Property="Background" Value="#D72323" />
            <Setter Property="Foreground" Value="#eeee" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#eeee" />
            
            
            
            
            
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3A4750" />
            <!-- Другие свойства стиля для хедера столбца -->
        </Style>



    </Application.Resources>
</Application>
